<div class="show-container fade-in-up">
  <div id="<%= dom_id match_info %>">

    <div class="section-card p-4 shadow-sm mb-4">
      <h2 class="section-title mb-3">試合情報</h2>
      <div class="row mb-2">
        <div class="column">
          <strong>日付:</strong>
          <%= match_info.match_date %>
        </div>
        <div class="column">
          <strong>大会名:</strong>
          <%= match_info.match_name %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="column">
          <strong>選手名:</strong>
          <%= match_info.player.player_name %>
        </div>
        <div class="column">
          <strong>対戦相手名:</strong>
          <%= match_info.opponent.player_name %>
        </div>
      </div>

      <p>
        <strong>Memo:</strong>
        <%= match_info.memo %>
      </p>
    </div>

    <!-- ▼ サーブ・レシーブ分析のセクションは削除 -->

    <div class="section-card p-4 shadow-sm mb-4">
      <div class="ranking-section">
        <h3 class="section-title mb-3">技術ごとの得点率ランキング</h3>
        <table class="table">
          <thead>
            <tr>
              <th>技術</th>
              <th>得点率 (%)</th>
            </tr>
          </thead>
          <tbody>
            <% calculate_batting_score_data(@batting_scores).each do |data| %>
              <tr>
                <td><%= Score.human_enum_name(:batting_style, data[:batting_style]) %></td>
                <td><%= data[:rate] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="advice-section"
             data-controller="advice"
             data-advice-id-value="<%= @match_info.id %>"
             data-advice-url-value="<%= advice_status_match_info_path(@match_info) %>">
          <p data-advice-target="text"><%= @advice %></p>
        </div>
      </div>
    </div>

  </div>
</div>

<%= render partial: 'shared/error_messages', locals: { object: user } %>

<%= form_with url: login_path, data: { turbo_frame: 'login_form' } do |f| %>
  <div class="form-group mb-3">
    <%= f.label :email, "メールアドレス" %>
    <%= f.text_field :email, class: 'form-control', placeholder: "example@example.com" %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, class: 'form-control', placeholder: "********" %>
  </div>
  <div class="form-check mb-3">
    <%= f.check_box :remember_me, value: "1", class: "form-check-input" %>
    <%= f.label "ログイン状態を保持する", class: "form-check-label" %>
  </div>
  <div class="center-text">
    <%= f.submit 'ログイン', class: 'btn btn-green-primary' %>
  </div>
<% end %>
